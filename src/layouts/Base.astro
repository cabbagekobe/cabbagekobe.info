---
import '@/styles/base.css';
import '@/styles/article.css';
import Footer from '@/components/Footer.astro';
import Header from '@/components/Header.astro';
import { createWebSiteSchema } from '@/lib/schema';
import { siteConfig } from '@/site.config';

export interface Props {
  title?: string;
  description?: string;
  permalink: string; // ページの正規URL (必須化)
  noindex?: boolean;
  og?: {
    type?: 'website' | 'article';
    image?: string; // OGP画像のURL
    imageAlt?: string; // OGP画像のaltテキスト
    publishedTime?: string;
    modifiedTime?: string;
  };
  // biome-ignore lint/suspicious/noExplicitAny: Schema structure is dynamic and difficult to strictly type at Props level.
  schemas?: Record<string, any>[];
}

const {
  title: pageTitle = siteConfig.title,
  description = siteConfig.description,
  permalink,
  noindex = false,
  og,
  schemas = [],
} = Astro.props;

// SEO / OGP
const title =
  pageTitle === siteConfig.title
    ? siteConfig.title
    : `${pageTitle} | ${siteConfig.title}`;
const absoluteUrl = new URL(permalink, siteConfig.siteUrl).href;
const ogType = og?.type ?? 'website';
const ogImage = og?.image ?? siteConfig.ogp.defaultImage;
const absoluteOgpImageUrl = new URL(ogImage, siteConfig.siteUrl).href;
const ogImageAlt = og?.imageAlt ?? title;

// 構造化データ
const webSiteSchema = createWebSiteSchema(siteConfig);
const allSchemas = [webSiteSchema, ...schemas].filter(Boolean);

const finalSchema = {
  '@context': 'https://schema.org',
  '@graph': allSchemas,
};
---

<!DOCTYPE html>
<html lang="ja" class="scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>{title}</title>
    <meta name="description" content={description} />

    <!-- Canonical URL -->
    <link rel="canonical" href={absoluteUrl} />

    <!-- OGP -->
    <meta property="og:site_name" content={siteConfig.title} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={absoluteUrl} />
    <meta property="og:type" content={ogType} />
    {ogType === 'article' && og.publishedTime && (
      <meta property="article:published_time" content={og.publishedTime} />
    )}
    {ogType === 'article' && og.modifiedTime && (
      <meta property="article:modified_time" content={og.modifiedTime} />
    )}
    <meta property="og:locale" content="ja_JP" />
    <meta property="og:image" content={absoluteOgpImageUrl} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:image:alt" content={ogImageAlt} />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content={siteConfig.sns.twitter} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={absoluteOgpImageUrl} />

    <meta name="robots" content={noindex ? 'noindex, nofollow' : 'index, follow'} />

    <!-- Favicon -->
    <link rel="icon" href="/favicon.ico" sizes="48x48" />
    <link rel="icon" href="/favicon.svg" sizes="any" type="image/svg+xml" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.svg" />

    <link rel="alternate" type="application/rss+xml" title={siteConfig.title} href="/rss.xml" />
    <script type="application/ld+json" set:html={JSON.stringify(finalSchema)} />
    <script is:inline>
      const theme = (() => {
        if (typeof localStorage !== 'undefined' && localStorage.getItem('theme')) {
          return localStorage.getItem('theme');
        }
        if (window.matchMedia('(prefers-color-scheme: dark)').matches) {
          return 'dark';
        }
        return 'light';
      })();

      if (theme === 'dark') {
        document.documentElement.classList.add('dark');
      } else {
        document.documentElement.classList.remove('dark');
      }
    </script>
  </head>

  <body class="flex flex-col min-h-screen bg-background text-text-body text-scale-0 leading-relaxed">
    <Header />

    <main
      class:list={[
        'flex-grow',
        'w-full',
        siteConfig.layout.width,
        'mx-auto',
        'px-3',
        'py-10',
        'md:py-16',
      ]}
    >
      <slot />
    </main>

    <Footer />
  </body>
</html>
