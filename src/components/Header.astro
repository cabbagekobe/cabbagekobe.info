---
import { siteConfig } from '@/site.config';
---
<header
  class="sticky top-0 z-40 w-full bg-opacity-60 backdrop-blur-sm bg-background border-b border-accent/10 shadow-sm transition-all duration-100 ease-in-out"
>
  <div
    class:list={[
      'mx-auto',
      'flex',
      'h-16',
      siteConfig.layout.width,
      'items-center',
      'justify-between',
      'px-3',
    ]}
  >
    <h1 class="font-bold text-scale-2">
      <a href="/">{siteConfig.title}</a>
    </h1>
  </div>
</header>

